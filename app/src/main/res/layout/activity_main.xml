<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:longClickable="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#DEEAE9"
        tools:context=".Main">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_gravity="center"
            android:src="@drawable/clock_512"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/appName"
            android:layout_below="@+id/imageLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Monitoramento de Ponto"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/labelLogo"
            android:layout_below="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="UsuÃ¡rio"
            android:id="@+id/labelUsername"
            android:layout_below="@+id/labelLogo"
            android:layout_width="fill_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/inputUsername"
            android:layout_below="@+id/labelUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Senha"
            android:layout_marginTop="10dp"
            android:id="@+id/labelPassword"
            android:layout_below="@+id/inputUsername"
            android:textColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/inputPassword"
            android:layout_below="@+id/labelPassword"
            android:inputType="textPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="login"
            android:text="Acessar"
            android:layout_below="@+id/inputPassword"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="2014 - Luan Kosaka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>
